{
  "version": "0.6.0",
  "license": "MIT",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=10"
  },
  "watch": {
    "build:types": {
      "patterns": [
        "src/schema",
        "src/queries"
      ],
      "ignore": [
        "src/generated",
        "src/queries/*.d.ts",
        "dist"
      ],
      "extensions": [
        "graphql"
      ],
      "quiet": false
    }
  },
  "scripts": {
    "build:types": "graphql-let",
    "watch:build:types": "npm-watch build:types",
    "start:dev": "concurrently --raw npm:watch:build:types npm:watch:tsdx",
    "watch:tsdx": "tsdx watch --verbose",
    "build:publish": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint --fix",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "name": "@grogqli/schema",
  "author": "Dean Slama",
  "module": "dist/schema.esm.js",
  "size-limit": [
    {
      "path": "dist/schema.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/schema.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {
    "graphql": "^15.4.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.20.0",
    "@graphql-codegen/plugin-helpers": "^1.18.2",
    "@graphql-codegen/typed-document-node": "^1.18.2",
    "@graphql-codegen/typescript": "^1.20.0",
    "@graphql-codegen/typescript-operations": "^1.17.13",
    "@graphql-codegen/typescript-resolvers": "^1.18.1",
    "@graphql-typed-document-node/core": "^3.1.0",
    "graphql-let": "^0.16.3",
    "npm-watch": "^0.7.0",
    "rollup-plugin-graphql-tag": "^0.1.0",
    "tsdx": "^0.14.1"
  }
}
