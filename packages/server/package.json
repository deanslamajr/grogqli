{
  "name": "@grogqli/server",
  "version": "0.5.0",
  "license": "MIT",
  "main": "build/server.js",
  "bin": {
    "grogqli": "scripts/startServer.js"
  },
  "scripts": {
    "watch:tsc": "tsc -b -w --preserveWatchOutput",
    "watch:razzle": "wait-on file:./node_modules/@grogqli/webapp/dist/success.txt && razzle start",
    "start:watchers": "concurrently --raw --default-input-target 1 npm:watch:tsc npm:watch:razzle",
    "start:dev": "npm run start:watchers",
    "build:publish": "tsc -b && razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "lint": "eslint --fix --ext 'js,jsx,ts,tsx' ."
  },
  "dependencies": {
    "@apollo/client": "^3.3.7",
    "@grogqli/schema": "^0.5.0",
    "@grogqli/webapp": "^0.5.0",
    "apollo-link-schema": "^1.2.5",
    "apollo-server-core": "^2.19.2",
    "apollo-server-express": "^2.19.2",
    "cors": "^2.8.5",
    "edit-json-file": "^1.5.0",
    "express": "^4.17.1",
    "express-unless": "^0.5.0",
    "find-up": "^5.0.0",
    "graphql": "^15.4.0",
    "graphql-tools": "^6.2.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "shortid": "^2.2.16",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^10.4.9",
    "@testing-library/user-event": "^10.4.1",
    "@types/cors": "^2.8.9",
    "@types/edit-json-file": "^1.4.0",
    "@types/express": "^4.17.11",
    "@types/webpack-env": "^1.16.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "babel-preset-razzle": "^3.3.11",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "http-terminator": "^2.0.3",
    "razzle": "^3.3.11",
    "razzle-dev-utils": "^3.3.11",
    "razzle-plugin-eslint": "^3.3.11",
    "vue": "^2.6.12"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "gitHead": "e0d2d2313caa8f98c98cb28f85e0f3e57dcb99eb"
}
